[
  {
    "name": "斋书苑",
    "site": "https://www.zhaishuyuan.com/",
    "search": {
      "params": {
        "url": "https://www.zhaishuyuan.com/search/?page={{page}}&key={{keyword}}",
        "method": "POST",
        "mediaType": "form",
        "charset": "gbk"
      },
      "list": "//*[@id=\"sitembox\"]/dl",
      "detail": {
        "url": "/dd[1]/h3/a/@href",
        "title": "/dd[1]/h3/a/allText()"
      }
    }
  },
  {
    "name": "笔趣阁",
    "site": "https://m.biquge.com.cn/",
    "search": {
      "params": {
        "url": "https://m.biquge.com.cn/search.php?q={{keyword}}&p={{page}}",
        "method": "GET",
        "charset": "utf-8"
      },
      "list": "//body/div[2]/div",
      "detail": {
        "url": "/div[1]/a/@href",
        "title": "/div[2]/h3/a/allText()"
      }
    }
  },
  {
    "name": "幻世小说",
    "site": "https://www.h4xs.cc/",
    "toc": {
      "list": "//article",
      "name": "/div/h2/a/text()",
      "url": "/div/div[1]/a/@href"
    },
    "search": {
      "params": {
        "url": "https://www.h4xs.cc/page/{{page}}/?s={{keyword}}",
        "method": "GET",
        "charset": "utf-8"
      },
      "list": "//article",
      "detail": {
        "url": "/div/div[1]/a/@href",
        "title": "/div/h2/a/text()"
      }
    }
  },
  {
    "name": "全本小说网",
    "site": "http://www.quanben.me/",
    "toc": {
      "list": "//article",
      "name": "/div/h2/a/text()",
      "url": "/div/div[1]/a/@href"
    },
    "search": {
      "params": {
        "url": "http://www.quanben.me/modules/article/search.php",
        "method": "POST",
        "body": "searchkey={{keyword}}"
      },
      "list": "//*[@id=\"wrapper\"]/table/tbody/tr",
      "detailPage": "/td[1]/a/@href",
      "detail": {
        "url": {
          "page": "search",
          "rule": "/td[1]/a/@href"
        },
        "title": {
          "page": "detail",
          "rule": "//*[@id=\"info\"]/h1/text()"
        }
      }
    }
  }
]

